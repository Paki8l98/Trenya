<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/dayButton"
            android:layout_width="184dp"
            android:layout_height="90dp"
            android:background="@drawable/gbfg"
            android:focusable="false"
            android:gravity="center"
            android:padding="16dp"
            android:text="\n\nДень"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <LinearLayout
            android:id="@+id/infoLayout"
            android:layout_width="215dp"
            android:layout_height="90dp"
            android:background="@drawable/rewrt"
            android:orientation="vertical"
            android:padding="16dp"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/dayButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <!--            <TextView-->
            <!--                android:id="@+id/trainingTimeTextView"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="Среднее время: XX мин"-->
            <!--                android:textSize="16sp"-->
            <!--                android:textStyle="bold"-->
            <!--                android:layout_marginBottom="8dp"/>-->

            <TextView
                android:id="@+id/muscleGroupTextView"
                android:layout_width="153dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:textColor="@android:color/white"
                android:text="Группа мышц: "
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dayOfWeekTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="День недели: "
                android:textSize="12sp"
                android:textStyle="bold" />

            <!--            <TextView-->
            <!--                android:id="@+id/progressTextView"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="Прогресс: XX%"-->
            <!--                android:textSize="14sp"/>-->

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
