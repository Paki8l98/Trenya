<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/city_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Населенный пункт:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/city_text_view"
        android:text="Получить местоположение" />

    <Button
        android:id="@+id/btn_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_location"
        android:text="Погода"
        android:enabled="false" />

    <Button
        android:id="@+id/btn_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выбрать на карте"
        android:layout_below="@id/btn_weather"/>

    <Button
        android:id="@+id/btn_show_cities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Показать выбранные города"
        android:layout_below="@id/btn_map"/>

<!--    <Button-->
<!--        android:id="@+id/btn_manual"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@id/btn_show_cities"-->
<!--        android:text="Выбрать вручную" />-->


</RelativeLayout>
